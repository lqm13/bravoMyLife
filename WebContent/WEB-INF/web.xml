<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	id="kr.co.bravomylife">

	<filter>
		<filter-name>characterEncoding</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>characterEncoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>/WEB-INF/conf/${common.mode}/log4j.xml</param-value>
	</context-param>
	
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/conf/${common.mode}/spring-context-resource.xml</param-value>
	</context-param>
	
	<servlet>
		<servlet-name>controller</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/conf/spring-context-application.xml</param-value>
		</init-param>
		<init-param>
			<param-name>throwExceptionIfNoHandlerFound</param-name>
			<param-value>true</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>controller</servlet-name>
		<url-pattern>*.web</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>controller</servlet-name>
		<url-pattern>*.json</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>controller</servlet-name>
		<url-pattern>*.api</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>result</servlet-name>
		<servlet-class>kr.co.bravomylife.util.servlet.Result</servlet-class>
	</servlet>  
	<servlet-mapping>
		<servlet-name>result</servlet-name>
		<url-pattern>/servlet/result.web</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>config</servlet-name>
		<servlet-class>kr.co.bravomylife.util.servlet.Config</servlet-class>
		<init-param>
			<param-name>pageNavigator</param-name>
			<param-value>/WEB-INF/conf/pageNavigator.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet> 
	
	<error-page>
		<error-code>400</error-code>
		<location>/error.web?code=400</location> 
	</error-page>
	<error-page>
		<error-code>401</error-code>
		<location>/error.web?code=401</location>
	</error-page>
	<error-page>
		<error-code>403</error-code>
		<location>/error.web?code=403</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/error.web?code=404</location>
	</error-page>
	<error-page>
		<error-code>405</error-code>
		<location>/error.web?code=405</location>
	</error-page>
	<error-page>
		<error-code>408</error-code>
		<location>/error.web?code=408</location>
	</error-page>
	<error-page>
		<error-code>415</error-code>
		<location>/error.web?code=415</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/error.web?code=500</location>
	</error-page>
	<error-page>
		<error-code>503</error-code>
		<location>/error.web?code=503</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/error.web?code=exception</location>
	</error-page>
	<error-page>
		<exception-type>javax.servlet.ServletException</exception-type>
		<location>/error.web?code=servletException</location>
	</error-page>
	
	<session-config>
		<session-timeout>60</session-timeout>
	</session-config>
	
	<welcome-file-list>
		<welcome-file>index.web</welcome-file>
		<welcome-file>login.web</welcome-file>
	</welcome-file-list>
	
</web-app>